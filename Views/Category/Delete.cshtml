@model CategoryModel


<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h2 class="text-bg-primary">
                Delete Category
            </h2><hr />
        </div>
      @*   <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            @* <span asp-validation-for="Name" class="text-bg-danger"></span> *@
            <br />
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            @* <span asp-validation-for="DisplayOrder" class="text-bg-danger"></span> *@

            <br />


        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn-danger" style="width:150px">Delete</button> &nbsp;
@*             <button type="submit" asp-controller="Category" asp-action="Index" class="btn-secondary" style="width:150px">Back</button>
 *@            <a asp-controller="Category" asp-action="Index" class="btn-secondary" style="width:150px">Back</a>
        </div>
    </div>
</form>

