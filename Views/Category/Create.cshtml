@model CategoryModel


<form method="post">
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h2 class="text-bg-primary">
                Create Category
            </h2><hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-bg-danger"></span>
            <br />
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-bg-danger"></span>

            <br />
            
             
        </div>
        <div class="d-flex justify-content-center">
        <button type="submit" class="btn-primary" style="width:150px">Create</button> &nbsp;
        <button type="submit" asp-controller="Category" asp-action="Index" class="btn-secondary" style="width:150px">Back</button>
        </div>
    </div>
</form>

@* to add client side validation *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}